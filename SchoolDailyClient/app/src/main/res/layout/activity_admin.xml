<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lightgrey">

        <RelativeLayout
            android:id="@+id/mPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#17a3f2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="我的"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/id_portrait"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shap"
                android:src="@drawable/touxiang" />

            <TextView
                android:id="@+id/id_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/id_portrait"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:textSize="20dp"
                android:text="TextView" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mPhoto">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/a1" />

                    <TextView
                        android:id="@+id/DailyAffairs"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:gravity="left|center"
                        android:text="  班级排名"
                        android:textSize="20dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/tv_one"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/jiantou" />

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/ll_one">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/b2" />

                    <TextView
                        android:id="@+id/WorkRecord"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:gravity="left|center"
                        android:text="  今日考勤"
                        android:textSize="20dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/tv_two"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_one"
                    android:background="@drawable/jiantou" />

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/ll_two">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/sj1" />

                    <TextView
                        android:id="@+id/ScheduleReminder"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:gravity="left|center"
                        android:text="  学生信息"
                        android:textSize="20dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/tv_three"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_two"
                    android:background="@drawable/jiantou" />

                <LinearLayout
                    android:id="@+id/ll_four"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/ll_three">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_below="@+id/imageView9"
                        android:layout_gravity="center"
                        android:background="@drawable/shezhi1" />

                    <TextView
                        android:id="@+id/SetUp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignBottom="@+id/imageView11"
                        android:background="#FFF"
                        android:gravity="left|center"
                        android:text="  待处理事件"
                        android:textSize="20dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/tv_four"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_three"
                    android:background="@drawable/jiantou" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:id="@+id/check_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_four"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/check_img"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@drawable/checkmenu" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日常管理菜单"/>

                </LinearLayout>
                <Button
                    android:id="@+id/Esc"
                    android:layout_width="500dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:background="#FFF"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textSize="20dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>